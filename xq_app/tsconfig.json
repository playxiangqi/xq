{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "paths": {
      "@xq/core/*": ["src/components/*"],
      "@xq/*": ["src/*"]
    },
    "types": ["svelte", "carbon-icons-svelte"]
  }
}
